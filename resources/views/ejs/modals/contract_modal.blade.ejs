<form class="modal fade"  data-background="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<button type="button" class="[ modal__close-button ] btn" data-dismiss="modal">&times;</button>
			<div class="modal-header">
				<%= contract ?  __('modals.contract.edit_contract') : __('modals.contract.create_contract') %>
			</div>
			<div class="modal-body">
				<div class="form">
					<div class="form-group mb-0">
						<div class="form-row">
		                    <div class="col" style="max-width: 170px;">
		                        <label for="modal__hourly-rate" class="mb-1">
		                        	{{ __('modals/contract.hourly_rate') }}
		                        </label>
		                        <div class="input-group">
		                            <div class="input-group-prepend">
		                                <span class="input-group-text">$</span>
		                            </div>
		                            <input value="<%- (contract ? contract.hourly_rate : employee_user.hourly_rate) %>" name="contract[hourly_rate]" data-name="contract.hourly_rate" class="form-control" type="number" step="0.01" min="0" id="modal__hourly-rate" placeholder="XXX" style="text-align: right;">
		                            <div class="input-group-append">
		                                <span class="input-group-text">/h</span>
		                            </div>
		                        </div>
		                        <div class="invalid-feedback"></div>
		                    </div>
		                    <div class="col">
		                    	<label for="modal__title" class="mb-1">
		                    		{{ __('modals/contract.title') }}
		                    	</label>
								<input class="form-control" name="contract[title]" data-name="contract.title" placeholder="{{ __('modals/contract.e_g_junior_designer') }}" value="<%= (contract ? contract.title : employee_user.professional_title) %>" id="modal__title">
								<div class="invalid-feedback"></div>
		                    </div>
		                </div>
					</div>
					<% if (contract) { %>
						<div class="text-danger text-sm">* changing the hourly rate will recreate a new contract</div>
					<% } %>
					<div class="text-right">
						<button type="submit" class="[ modal__save-button ] btn btn-primary mt-2">
							<%= contract ? __('modals.contract.save') : __('modals.contract.create_new_contract') %>
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
