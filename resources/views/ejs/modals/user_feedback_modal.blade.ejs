<form id="feedback-form" class="modal + is-feedback fade" tabindex="-1" role="dialog"
      aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <button type="button" class="[ modal__close-button ] btn" data-dismiss="modal">&times;</button>
            <div class="modal-body">
                <div class="form">
                    <div class="form-group">
                        <label>{{ __('modals/feedback.please_write_your_feedback') }}</label>
                        <textarea
								rows="10" name="user_feedback[text]"
								  data-name="user_feedback.text"
                                  class="form-control"
								  style="resize: none;
								  height: 120px;"
                                  placeholder="{{ __('modals/feedback.let_us_know') }}"
						></textarea>
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="text-right">
                        <button
								type="button"
								class="[ modal__cancel-button ] btn btn-danger"
								data-dismiss="modal"
						>
							{{ __('modals/feedback.cancel') }}
                        </button>
                        <button type="submit" class="[ modal__send-feedback-button ] btn btn-primary">
							{{ __('modals/feedback.confirm') }}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
