<form class="modal fade"  data-background="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<button type="button" class="[ modal__close-button ] btn" data-dismiss="modal">&times;</button>
			<div class="modal-body">
				<p class="text-center">
					<img src="{{ asset('/img/protection.svg') }}" width="50px" height="50px">
				</p>
				<hr class="mb-5 mt-0">
				<p class="text-center">
					<%= question || "{{ __('modals/confirm_action.are_you_sure') }}" %>
				</p>
				<p class="text-right mb-0">
					<button type="button" class="[ modal__cancel-button ] btn btn-default" data-dismiss="modal">
						{{ __('modals/confirm_action.cancel') }}
					</button>
					<button type="submit" class="[ modal__confirm-button ] btn btn-primary">
						{{ __('modals/confirm_action.confirm') }}
					</button>
				</p>
			</div>
		</div>
	</div>
</form>